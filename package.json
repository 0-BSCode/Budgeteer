{
  "name": "budgeteer-monorepo",
  "version": "1.0.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@types/bun": "latest",
    "commitizen": "^4.3.1",
    "eslint": "^8",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-unused-imports": "3",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "private": true,
  "scripts": {
    "prepare": "husky",
    "server:lint": "eslint --no-error-on-unmatched-pattern --fix ./packages/server/src/**/*.ts",
    "server:format": "prettier --write ./packages/server/src/**/*.{ts|json}",
    "client:lint": "eslint --no-error-on-unmatched-pattern --fix ./packages/client/src/**/*.{ts,tsx}",
    "client:format": "prettier --write ./packages/client/src/**/*.{ts|tsx|css|html|json}",
    "types:lint": "eslint --no-error-on-unmatched-pattern --fix ./packages/types/src/**/*.ts",
    "types:format": "prettier --write ./packages/types/src/**/*.ts|json"
  },
  "workspaces": [
    "packages/*"
  ]
}
