{
  "name": "@budgeteer/server",
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun src/index.ts",
    "lint": "eslint --fix --no-error-on-unmatched-pattern ./src/**/*.ts",
    "format": "prettier --write \"**/*.+(ts|json)\"",
    "drizzle:generate": "drizzle-kit generate --config=\"./src/infrastructure/typeorm-data-service/drizzle.config.ts\"",
    "drizzle:migrate": "drizzle-kit migrate --config=\"./src/infrastructure/typeorm-data-service/drizzle.config.ts\"",
    "drizzle:push": "drizzle-kit push --config=\"./src/infrastructure/typeorm-data-service/drizzle.config.ts\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.27.1",
    "eslint": "^8",
    "tsx": "^4.19.2"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@budgeteer/types": "workspace:*",
    "@hono/eslint-config": "^1.0.2",
    "@hono/zod-validator": "^0.4.1",
    "@types/bcrypt": "^5.0.2",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.9",
    "pg": "^8.13.1",
    "zod": "^3.23.8"
  },
  "type": "module"
}
